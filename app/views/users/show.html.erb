<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section>
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
    <section class="stats">
      <%#= render 'shared/stats' %>

    </section>
  </aside>
  <aside class="col-md-10" style="float: right;">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>Order Id</th>
          <th>Product Name</th>
          <th>Order Amount</th>
          <th>Status</th>
        </tr>
      </thead>
      <tbody>
        <% if @orders.present? %>
          <% @orders.each do |order| %>
            <tr>
              <td><%= order.id %></td>
              <td><%= order.line_items.map(&:product).map(&:name).join(', ') %></td>
              <td><%= order.line_items.map(&:amount).sum %></td>
            </tr>
          <% end %>
        <% else %>
          <strong>No Orders ;(</strong>
        <% end %>
      </tbody>
    </table>
  </aside>
</div>